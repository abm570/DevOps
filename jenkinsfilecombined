pipeline {
    agent any

    tools {
        jdk 'jdk21'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/abm570/DevOps/'
            }
        }

        stage('Compile') {
            steps {
                echo 'Running both Java & Python Files inside a single Jenkins File'
                echo 'Compiling....'
                sh 'javac hello.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java File....'
                sh 'java hello'
            }
        }

      stage('Build Python')
      {
          steps{
                  echo 'Running Python File....'
                  sh 'python3 demo.py'
        }
      }
    }
}
